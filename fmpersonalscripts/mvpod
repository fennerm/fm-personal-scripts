#!/usr/bin/env bash

# Mount the mp3 player if necessary
MOUNTPOINT="/run/media/fen-arch/EC95-4FBB"
DIR="$MOUNTPOINT/PODCASTS"
mkdir "$DIR"

# Move the episodes
for f in "/home/data/podcasts/*"
do
    if [[ -d "$f" ]]; then
        if eval cp -v "${f}/*" "$DIR"; then
            rm "$f/*"
        fi
    else
        if eval cp -vr "$f" "$DIR"; then
            rm "$f"
        fi
    fi
done
